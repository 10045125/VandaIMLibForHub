<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_conv_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@mipmap/ic_voice"/>

    <TextView
        android:id="@+id/id_conv_header"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:text="title"
        android:layout_toEndOf="@+id/id_conv_icon" />

    <TextView
        android:id="@+id/id_conv_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="6小时前"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/id_conv_text"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="隔壁老王的孩子叫小明"
        android:layout_below="@+id/id_conv_header"
        android:layout_toEndOf="@+id/id_conv_icon"/>

    <TextView
        android:id="@+id/id_conv_footer"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="小红"
        android:layout_below="@+id/id_conv_text"
        android:layout_toEndOf="@+id/id_conv_icon"/>

</RelativeLayout>