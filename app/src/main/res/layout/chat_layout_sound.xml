<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/id_chat_text_iv_bg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/my_head"
        android:layout_marginRight="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/id_chat_text_iv_bg"
        android:minHeight="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_chat_textview_status_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="4dp"
            android:padding="3dp"
            android:text="22已读"
            android:textColor="@color/color_chat_text_read_color"
            android:textSize="9sp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/id_chat_textview_status_fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginRight="4dp"
            android:text="44''"
            android:padding="2dp"
            android:textColor="@color/color_chat_text_read_color"
            android:textSize="9sp" />

        <LinearLayout
            android:id="@+id/id_chat_textview_ll"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:background="@mipmap/chatto_bg_normal"
            android:gravity="center"
            android:minHeight="48dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/id_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/sound_my_bg"
                android:layout_marginRight="4dp"
                android:layout_gravity="center|right"/>

        </LinearLayout>

    </LinearLayout>

