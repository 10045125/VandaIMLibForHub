<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp">

        <TextView
            android:id="@+id/id_message_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:textColor="@color/color_chat_name_color"
            android:textSize="16sp" />
        <!--android:text="真是日了狗了"-->
        <TextView
            android:id="@+id/id_message_group_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:padding="2dp"
            android:text="3小时前"
            android:textColor="@color/color_chat_content_color"
            android:textSize="10sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/id_message_group_last_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="@color/color_chat_name_color"
        android:textSize="14sp" />
    <!--android:text="听说我会中奖啊啊啊啊啊 啊啊啊啊吖吖啊 吖吖啊 听说我会中奖啊啊啊啊啊 啊啊啊啊吖吖啊 吖吖啊 听说我会中奖啊啊啊啊啊 啊啊啊啊吖吖啊 吖吖啊 "-->

    <TextView
        android:id="@+id/id_message_group_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:padding="2dp"
        android:singleLine="true"
        android:textColor="@color/color_chat_content_color"
        android:textSize="12sp" />
    <!--android:text="听说我会中奖"-->

</LinearLayout>